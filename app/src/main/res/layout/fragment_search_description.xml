<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developers.algoexplorer.fragments.SearchDescription">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchdesc"
            android:textColor="#000"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#808080"
            android:layout_margin="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complexity:"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Time:"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/search_best"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/search_worst"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/search_average"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Space Complexity:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:id="@+id/search_space"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>